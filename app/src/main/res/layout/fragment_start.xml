<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bkg_custom_grad_lin"
    android:layout_height="match_parent"
    tools:context=".StartFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.60" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vert_05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vert_95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title_settings"
        style="@style/text_settings_style"
        android:layout_width="0dp"
        android:padding="3dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="--Choose game--"
        app:layout_constraintBottom_toBottomOf="@id/guideline_hor_10"
        app:layout_constraintStart_toEndOf="@id/btn_heart"
        app:layout_constraintEnd_toStartOf="@id/btn_settings"
        app:layout_constraintTop_toTopOf="@id/guideline_hor_05" />

    <ImageView
        android:id="@+id/btn_settings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="1dp"
        android:src="@drawable/ic_baseline_settings_24"
        app:layout_constraintBottom_toBottomOf="@id/guideline_hor_10"
        app:layout_constraintDimensionRatio="1,1"
        app:layout_constraintEnd_toEndOf="@id/guideline_vert_95"
        app:layout_constraintTop_toTopOf="@id/guideline_hor_05" />

    <ImageView
        android:id="@+id/btn_heart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="1dp"
        android:src="@drawable/ic_baseline_favorite_24"
        app:layout_constraintBottom_toBottomOf="@id/guideline_hor_10"
        app:layout_constraintDimensionRatio="1,1"
        app:layout_constraintStart_toStartOf="@id/guideline_vert_05"
        app:layout_constraintTop_toTopOf="@id/guideline_hor_05" />

    <ImageView
        android:id="@+id/img_game_1"
        android:layout_width="180dp"
        android:layout_marginTop="16dp"
        android:layout_height="180dp"
        android:elevation="1dp"
        android:src="@drawable/logo_game_1"
        app:layout_constraintTop_toTopOf="@id/guideline_hor_10"
        app:layout_constraintEnd_toEndOf="@id/guideline_vert_95"
        app:layout_constraintStart_toStartOf="@id/guideline_vert_05" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_game_title_1"
        android:layout_width="0dp"
        android:background="@drawable/btn_custom_game_"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:maxLines="25"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="@color/add_colour_the_most_dark"
        android:textSize="21sp"
        android:textAllCaps="true"
        android:fontFamily="@font/opensans_regular"
        android:text="Space race"
        app:layout_constraintTop_toBottomOf="@id/img_game_1"
        app:layout_constraintEnd_toEndOf="@id/guideline_vert_95"
        app:layout_constraintStart_toStartOf="@id/guideline_vert_05" />

    <ImageView
        android:id="@+id/img_game_2"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:elevation="1dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo_game_2"
        app:layout_constraintTop_toBottomOf="@id/guideline_hor_50"
        app:layout_constraintEnd_toEndOf="@id/guideline_vert_95"
        app:layout_constraintStart_toStartOf="@id/guideline_vert_05" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_game_title_2"
        android:layout_width="0dp"
        android:background="@drawable/btn_custom_game_"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:maxLines="25"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="@color/add_colour_the_most_dark"
        android:textSize="21sp"
        android:textAllCaps="true"
        android:fontFamily="@font/opensans_regular"
        android:text="Starship race"
        app:layout_constraintTop_toBottomOf="@id/img_game_2"
        app:layout_constraintEnd_toEndOf="@id/guideline_vert_95"
        app:layout_constraintStart_toStartOf="@id/guideline_vert_05" />


    <ImageView
        android:id="@+id/img_lidearboard"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:elevation="1dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/podium"
        app:layout_constraintTop_toBottomOf="@id/tv_game_title_2"
        app:layout_constraintEnd_toEndOf="@id/guideline_vert_95"
        app:layout_constraintStart_toStartOf="@id/guideline_vert_05" />





</androidx.constraintlayout.widget.ConstraintLayout>